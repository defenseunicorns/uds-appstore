{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/AppstoreTypes",
  "$defs": {
    "Application": {
      "properties": {
        "kind": {
          "type": "string"
        },
        "metadata": {
          "$ref": "#/$defs/ApplicationMetadata"
        },
        "spec": {
          "$ref": "#/$defs/ApplicationSpec"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ApplicationContractingDetails": {
      "properties": {
        "number": {
          "type": "string"
        },
        "vehicle": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "pricingModel": {
          "items": {
            "type": "string",
            "enum": [
              "Free",
              "Bring Your Own License"
            ]
          },
          "type": "array"
        },
        "smallBusinessStatus": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ApplicationIcon": {
      "properties": {
        "src": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "size": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ApplicationMetadata": {
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ApplicationResourceLink": {
      "properties": {
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ApplicationSpec": {
      "properties": {
        "title": {
          "type": "string"
        },
        "tagline": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        },
        "icons": {
          "items": {
            "$ref": "#/$defs/ApplicationIcon"
          },
          "type": "array"
        },
        "categories": {
          "items": {
            "type": "string",
            "enum": [
              "AI/ML",
              "Arcade",
              "Collaboration",
              "Command And Control",
              "Databases",
              "Digital Engineering",
              "IT Management",
              "Kubernetes (K8s)",
              "Networking",
              "Productivity",
              "Security",
              "Software Dev",
              "Space Operations",
              "Web"
            ]
          },
          "type": "array"
        },
        "vendor": {
          "$ref": "#/$defs/ApplicationVendor"
        },
        "contractingDetails": {
          "$ref": "#/$defs/ApplicationContractingDetails"
        },
        "security": {
          "type": "string",
          "enum": [
            "NIST 800-53 Controls Mapped",
            "FIPS Image"
          ]
        },
        "architecture": {
          "items": {
            "type": "string",
            "enum": [
              "arm64",
              "amd64"
            ]
          },
          "type": "array"
        },
        "infrastructure": {
          "items": {
            "type": "string",
            "enum": [
              "AWS GovCloud (US)",
              "Azure Government Cloud",
              "On-prem",
              "Edge"
            ]
          },
          "type": "array"
        },
        "keywords": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "links": {
          "items": {
            "$ref": "#/$defs/ApplicationResourceLink"
          },
          "type": "array"
        },
        "versions": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ApplicationVendor": {
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "icons": {
          "items": {
            "$ref": "#/$defs/ApplicationIcon"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "AppstoreTypes": {
      "properties": {
        "Application": {
          "$ref": "#/$defs/Application"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}
