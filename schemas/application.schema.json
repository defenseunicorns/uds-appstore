{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/defenseunicorns/uds-appstore/pkg/api/application",
  "$ref": "#/$defs/Application",
  "$defs": {
    "Application": {
      "properties": {
        "name": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "repositories": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "description": {
          "type": "string"
        },
        "tagline": {
          "type": "string"
        },
        "icon_path": {
          "type": "string"
        },
        "keywords": {
          "$ref": "#/$defs/Keywords"
        },
        "links": {
          "$ref": "#/$defs/Links"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Keywords": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "Link": {
      "properties": {
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Links": {
      "items": {
        "$ref": "#/$defs/Link"
      },
      "type": "array"
    }
  }
}
